{
    "configurations": [
        {
            "name": "Copy Deps",
            "type": "gradle",
            "tasks": [
                ":copyInputsAndTests"
            ]
        },
        {
            "name": "Build AdventOfCodeSolutions",
            "type": "gradle",
            "tasks": [
                ":classes"
            ]
        },
        {
            "name": "Run Today",
            "type": "jps-run",
            "dependsOn": [
                "Copy Deps",
                "Build AdventOfCodeSolutions"
            ],
            "mainClass": "SolutionKt",
            "module": "personal.AdventOfCodeSolutions.main",
            "options": [
                "-Dfile.encoding=UTF-8"
            ],
            "args": ["today"],
        },
        {
            "name": "Test Today",
            "type": "jps-run",
            "dependsOn": [
                "Copy Deps",
                "Build AdventOfCodeSolutions"
            ],
            "mainClass": "SolutionKt",
            "module": "personal.AdventOfCodeSolutions.main",
            "options": [
                "-Dfile.encoding=UTF-8"
            ],
            "args": ["today", "test"],
        }
    ]
}